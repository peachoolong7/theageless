/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="category-products">
    <?php // Grid Mode ?>
		
	
<script src="http://localhost/magenta/skin/frontend/theagelesswk/default/js/modernizr-transitions.js"></script>

		
		<div id = "faBoxGroup" class = "productList transitions-enabled clearfix">
    <?php $_collectionSize = $_productCollection->count() ?>
    <?php $_columnCount = $this->getColumnCount(); ?>
    <?php $i=0; foreach ($_productCollection as $_product): ?>
        <?php if ($i++%$_columnCount==0): ?>
        
        <?php endif ?>
		
		
				
				<div class = "faBox">
					<div class = "faBoxPic">
						<a href = "<?php echo $_product->getProductUrl() ?>"><img src = "<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135); ?>" width = "100%" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>">
				</a>
					</div>
					
					<div class = "faBoxDesc">
						<header class = "faBoxTitle">
							<a href = "<?php echo $_product->getProductUrl() ?>"><span class = "faBoxColorBox" style = "background-color : ;">O.</span> <?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?>
				</a>
						</header>
						<footer class = "faBoxPrice">
						 <?php echo $this->getPriceHtml($_product, true) ?>
						</footer>
					</div>
				</div>
            
               
        <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
        
        <?php endif ?>
        <?php endforeach ?>

		</div>
		</div>
		</div>
		</div>
		
		
		
		
		
	
<script src="http://localhost/magenta/skin/frontend/theagelesswk/default/js/jquery-1.9.1.min.js"></script>
<script src="http://localhost/magenta/skin/frontend/theagelesswk/default/js/jquery.masonry.js"></script>

<script>
  $(function(){
    
    $('#faBoxGroup').masonry({
      itemSelector: '.faBox',
      columnWidth: 100,
      isAnimated: !Modernizr.csstransitions,
      isFitWidth: true
    });
    
  });
</script>


    <div class="toolbar-bottom">
        <?php echo $this->getToolbarHtml() ?>
    </div>
</div>
<?php endif; ?>
